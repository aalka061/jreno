<div  id="lightgallery" class="row" style="padding-left: 70px; padding-right: 70px">
  <% @pictures && @pictures.each do |picture| %>
  <div
  class="col-lg-4 col-md-6"
  data-src=" <%=picture.main_image.attachment && picture.main_image.attachment.url%>"
  data-sub-html="<h3><%= picture.title  %> </h3><p><%= picture.description %>.</p>"
  >
  <div class="fullwrap">
    <a href="#">
      <img src=" <%= picture.main_image.attachment && picture.main_image.attachment.url %>" class="img-thumbnail img-responsive" style="height: 500px; display: block;">
      <div  class="fullcap p-poppins">
      </div>
    </a>
  </div>
</div>
<% end %>
</div>
<div class="row">
  s
</div>


<style media="screen">

  /* (A) WRAPPER */
  .fullwrap {
    position: relative; /* required for (c2) */
    max-width: 500px; /* optional */
  }

  /* (B) RESPONSIVE IMAGE */
  .fullwrap img { width: 100%; }

  /* (C) CAPTION */
  .fullcap {
    /* (C1) DIMENSIONS */
    box-sizing: border-box;
    width: 100%;
    height: 100%;

    /* (C2) POSITION */
    position: absolute;
    top: 0; left: 0;
    text-align: center;
    padding-top: 30%;

    /* (C3) COLORS */
    background-color: rgba(0, 0, 0, 0.6);
    color: white;
    font-weight: bold;
    font-size: 20px;
  }

  /* (D) SHOW/HIDE */
  .fullcap {
    visibility: none; opacity: 0;
    transition: opacity 0.3s;
  }
  .fullwrap:hover .fullcap{
    visibility: visible; opacity: 1;
  }
</style>

<script type="text/javascript">
  lightGallery(document.getElementById('lightgallery'))
</script>
