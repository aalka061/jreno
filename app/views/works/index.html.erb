<!-- Portfolio Start -->
<div class="container-fluid py-6 px-5">
  <br>
  <% if current_user %>
  <% if @service %>
  <div class="mt-3">
    <%= link_to 'New Work', new_service_work_path, class: 'btn btn-secondary float-md-end' %>
  </div>
  <% else %>
  <div class="mt-3">
    <%= link_to 'New Work', new_work_path, class: 'btn btn-secondary float-md-end' %>
  </div>
  <% end %>
  <% end %>
  <div class="text-center mx-auto mb-5" style="max-width: 600px">
    <h1 class="display-5 text-uppercase mb-4">
      <%if @service  %>
      <%= @service.title %>
      <% else %>
      Our Work
      <% end %>
    </h1>
    <h5 class=" mb-4">
      <%= @service.description  if @service %>
    </h5>
  </div>

  <div class="row g-5 portfolio-container " style="position: relative; height: 1129.3px;">
    <% @works.each do |work| %>
    <div class="col-xl-4 col-lg-6 col-md-6 portfolio-item first">
      <div class="position-relative portfolio-box">
        <img class="img-fluid w-100" style="height: 400px" src="<%= work.main_image_url %>" alt="" />

        <a class="portfolio-title text-center" href=" <%= service_work_path(id: work.id, service_id: work.service_id) %>">
          <p class="h4 text-uppercase"> <%= work.title %></p>
          <%if current_user %>
          <%= link_to "<i class='bi bi-pencil-square '></i>".html_safe, edit_work_path(work), class: "btn btn-outline fs-4" %>
          <%= link_to "<i class='bi  bi-trash-fill'></i>".html_safe, work_path(work), method: :delete,
          data: {:confirm => 'Are you sure?'}, class: "btn btn-outline fs-4" %>
          <% end %>
          <a class="portfolio-btn" href="<%= service_work_path(id: work.id, service_id: work.service_id) %>"> <i class="bi bi-plus text-white"></i></a>
        </a>
      </div>
    </div>
    <% end %>

  </div>
</div>

<style media="screen">
  .portfolio-title {
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 80px;
    padding: 0 30px;
    right: 30px;
    left: 30px;
    bottom: -60px;
    background: #FFFFFF;
    z-index: 3;
      text-decoration: none;
  }
  .position-relative {
    position: relative !important;
  }

  .portfolio-item:hover .portfolio-btn {
    opacity: 1;
  }


  .portfolio-box::before {
    left: 0;
  }

  .portfolio-box::after {
    right: 0;
  }

  .portfolio-item:hover .portfolio-box::before {
    left: 0;
    width: 50%;
  }

  .portfolio-item:hover .portfolio-box::after {
    right: 0;
    width: 50%;
  }
  .portfolio-btn {
    position: absolute;
    display: inline-block;
    top: 50%;
    left: 50%;
    margin-top: -60px;
    margin-left: -60px;
    font-size: 120px;
    line-height: 0;
    transition: .1s;
    transition-delay: .3s;
    z-index: 2;
    opacity: 0;
  }

</style>
