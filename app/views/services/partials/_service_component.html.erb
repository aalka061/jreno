<div class="col-lg-4 col-sm-12">
  <div class="service-card">
    <a href="<%= _url  %>">
      <picture>
        <img  class="img-mod img-fluid" src="<%= asset_path(path) %>" alt="" />
      </picture>
      <h1 class="centered"> <%= title %></h1>
    </a>
  </div>
</div>

<style media="screen">
  .service-card {
    position: relative;
    text-align: center;
  }
  .centered {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: white;
    font-weight:bold;
    text-shadow: rgba(0, 0, 0, 0.4) 0px 4px 5px;

  }

  .img-mod {
    max-width: 100%;
  }

  @media screen and (max-width: 767px) {
    .centered {
      font-size: 1.2em;
    }
  }


  /* md */
  @media screen and (min-width: 992px) {
    .centered {
      font-size: 1.2em;
    }
  }

  /* lg */
  @media screen and (min-width: 1200px) {
    .centered {
      font-size: 36px;
    }
  }
</style>
