<div class="row g-5">
  <% @services.each do |service| %>
  <div class="col-lg-4 col-md-6">
    <div class="service-item bg-white d-flex flex-column align-items-center text-center">
      <img class="mb-3 img-fluid" src="<%=service.main_image_url %>" alt="" />

      <div class="px-4 pb-4">
        <h4 class="text-uppercase mb-3">
          <%= service.title %>
        </h4>
        <p>
          <%= service.description %>
        </p>
        <%= link_to "Read More", service_works_path(service), class: "btn text-primary" %> <i class="bi bi-arrow-right"></i>
      </div>
    </div>
  </div>
  <% end %>
</div>
