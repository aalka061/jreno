<div class=" mb-5" >
  <div class="row">
    <div class="col-md-3 col-xs-12"></div>
    <% if order_no.to_i.odd? %>
    <div class="col-md-3 col-xs-12">
      <img src="<%= asset_path(path) %>" alt="">
    </div>

    <div class="col-md-3 col-xs-12">
      <div class="card-body">
        <h2 class="card-title p-bold"> <%= order_no %> <br> <%= title %> </h2>
        <br>
        <p class="card-text">
          <%= description %>
        </p>
      </div>
    </div>
    <% else %>
    <div class="col-md-3 col-xs-12">
      <div class="card-body">
        <h2 class="card-title p-bold"> <%= order_no %> <br> <%= title %> </h2>
        <br>
        <p class="card-text col-xs-12">
          <%= description %>
        </p>
      </div>
    </div>

    <div class="col-md-3 col-xs-12">
      <img src="<%= asset_path(path) %>" alt="">
    </div>

    <% end %>
  </div>
</div>

<div class="line-between"></div>
